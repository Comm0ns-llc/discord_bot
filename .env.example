# Discord Bot Configuration
# Copy this file to .env and fill in your values

# ============================================
# Discord Configuration
# ============================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_APPLICATION_ID=your_application_id_here
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_NOTIFICATION_CHANNEL_ID=your_notification_channel_id_here

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_or_service_role_key_here
# Optional: key dedicated for TUI OAuth (recommended: anon key)
SUPABASE_AUTH_KEY=your_supabase_anon_key_here

# Optional: Python TUI OAuth settings
# TUI_AUTH_PORT=53682
# TUI_AUTH_TIMEOUT=180
# TUI_AUTH_SESSION_FILE=~/.comm0ns_dashboard/session.json

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ============================================
# Bot Settings (Optional)
# ============================================
# Storage backend: memory (default) or supabase
STORAGE_BACKEND=memory

# Minimum character length to trigger NLP analysis (default: 30)
NLP_MIN_CHAR_LENGTH=30

# Debug mode (set to true for development)
DEBUG_MODE=false
